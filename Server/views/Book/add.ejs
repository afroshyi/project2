<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Patient Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Patient Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Doctor Name</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the Doctors Name" name="Author" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Date </label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter the date of the appointment" name="Published" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Reason for appointment</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="Enter the reason for your appointment" name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Time</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Enter the time of your appointment(1159)" name="Price" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>